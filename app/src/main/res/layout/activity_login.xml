<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/loginpagebackgroundimage" />

    <!-- Logo -->
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="319dp"
        android:layout_height="250dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="48dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/loginscreenlogo" />

    <!-- Login Form -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="230dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="s2310163"
            android:textAlignment="center"
            android:textColor="#0D0C0C"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="342dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_edittext_transparent"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textColor="#EDE9E9"
            android:textColorHint="#AAF6F3F3"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="342dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_edittext_transparent"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAFFFFFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="331dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="#2105F6"
            android:text="Login"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="forgot password?"
            android:textColor="#FFFFFF" />

        <LinearLayout
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivGoogle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="Google Login"
                android:src="@drawable/googleicon" />

            <ImageView
                android:id="@+id/ivFacebook"
                android:layout_width="69dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="Facebook Login"
                android:src="@drawable/fbicon" />

            <ImageView
                android:id="@+id/ivTwitter"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:contentDescription="Twitter Login"
                android:src="@drawable/twittericon" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
